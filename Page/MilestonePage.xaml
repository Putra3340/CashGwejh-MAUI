<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CashGwejh.Page.MilestonePage"
             xmlns:vm="clr-namespace:CashGwejh.Models"
             Title="MilestonePage" x:DataType="vm:HomeMilestoneModel">
    <VerticalStackLayout
    Spacing="14"
    Padding="20">

        <!-- Title -->
        <Label
        Text="Edit Milestone"
        FontSize="22"
        FontAttributes="Bold"
        HorizontalOptions="Center" />

        <!-- Name -->
        <Label Text="Milestone Name" FontSize="13" TextColor="#8D99AE"/>
        <Frame CornerRadius="14" BackgroundColor="White">
            <Entry
            Text="{Binding Name}"
            Placeholder="Milestone name" />
        </Frame>

        <!-- Amount -->
        <Label Text="Current Amount" FontSize="13" TextColor="#8D99AE"/>
        <Frame CornerRadius="14" BackgroundColor="White">
            <Entry
            Text="{Binding Amount}"
            Keyboard="Numeric"
            Placeholder="Current amount" IsEnabled="False"/>
        </Frame>

        <!-- Target -->
        <Label Text="Target Amount" FontSize="13" TextColor="#8D99AE"/>
        <Frame CornerRadius="14" BackgroundColor="White">
            <Entry
            Text="{Binding Target}"
            Keyboard="Numeric"
            Placeholder="Target amount" />
        </Frame>

        <!-- Progress -->
        <Label Text="Progress" FontSize="13" TextColor="#8D99AE"/>
        <VerticalStackLayout Spacing="6">
            <Label
            Text="{Binding Percent, StringFormat='Progress: {0:P0}'}"
            FontSize="13"
            TextColor="#8D99AE" />
            <ProgressBar
            Progress="{Binding Percent}"
            HeightRequest="8" />
        </VerticalStackLayout>

        <!-- Start Date -->
        <Label Text="Start Date" FontSize="13" TextColor="#8D99AE"/>
        <Frame CornerRadius="14" BackgroundColor="White">
            <DatePicker
            Date="{Binding StartAt}"
            Format="dd MMM yyyy" />
        </Frame>

        <!-- Save Button -->
        <Button
        Text="Save Changes"
        CornerRadius="18"
        BackgroundColor="#6C63FF"
        TextColor="White"
        FontAttributes="Bold" Clicked="Button_Clicked"/>
    </VerticalStackLayout>

</ContentPage>